<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameToastFactoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/baseline_keyboard_backspace_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView82"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5sp"
            android:text="선창 &amp; 후창"
            android:textColor="#FFC107"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editUserInput1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="17"
                android:inputType="textPersonName"
                android:hint="원하는 느낌이나 상황을 입력해주세요."
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/imgButtonTwo"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/baseline_check_circle_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:background="#D8D2D2"
            android:text="  예시) 회식자리에서 재밌는 건배사  "
            android:textColor="#E91E63" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#7E7A7A"
            android:backgroundTint="#3C3A3A"
            android:gravity="center"
            android:text="선창"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtOutputFirst"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#D9D1E8"
            android:backgroundTint="#EFE5E5" />

        <TextView
            android:id="@+id/txt5"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="#7E7A7A"
            android:backgroundTint="#3C3A3A"
            android:gravity="center"
            android:text="후창"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtOutputLast"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#D9D1E8"
            android:backgroundTint="#EFE5E5" />

        <TextView
            android:id="@+id/txt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:text="단독 건배사"
            android:textColor="#FFC107"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editUserInput2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="17"
                android:inputType="textPersonName"
                android:hint="원하는 느낌이나 상황을 입력해주세요."
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/imgButtonOne"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/baseline_check_circle_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:background="#D8D2D2"
            android:text="  예시) 회식자리에서 재밌는 건배사  "
            android:textColor="#E91E63" />

        <TextView
            android:id="@+id/txtOutput"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="#D9D1E8"
            android:backgroundTint="#EFE5E5" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>