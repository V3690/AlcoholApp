<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/basic"
    tools:context=".MyRecipeWriteSecondActivity">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_0_back"
            android:tintMode="src_in"
            android:visibility="visible"
            app:tint="#4DFFFFFF" />

        <ImageView
            android:id="@+id/btnReturnRecipe"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="fitEnd"
            android:tintMode="src_in"
            app:srcCompat="@drawable/icon_menu1"
            app:tint="#FFD324" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="378dp"
        android:layout_height="630dp"
        android:layout_below="@id/topLayout"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="재료(술)"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:outlineProvider="none"
                    app:cardBackgroundColor="#33FFFFFF"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/txtAlcohol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#FFFFFF"
                        android:textColorLink="#FFFFFF"
                        android:textSize="14sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="선택 개수 :"
                    android:textColor="#86FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtAlcoholCount"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="#FFC107"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="5dp">

                    <EditText
                        android:id="@+id/editSearchAlcohol"
                        android:layout_width="215dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/boxline_24"
                        android:backgroundTint="#FFFFFF"
                        android:ems="13"
                        android:hint="재료를 검색하세요"
                        android:inputType="textPersonName"
                        android:paddingLeft="5dp"
                        android:textSize="14sp" />
                </androidx.cardview.widget.CardView>

                <ImageButton
                    android:id="@+id/imgSearchAlcohol"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#00FFFFFF"
                    app:srcCompat="@drawable/baseline_search_24"
                    app:tint="#B3FFFFFF" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/alcoholRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_marginTop="3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="부재료"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:outlineProvider="none"
                    app:cardBackgroundColor="#33FFFFFF"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/txtIngre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#FFFFFF"
                        android:textColorLink="#FFFFFF"
                        android:textSize="14sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="선택 개수 :"
                    android:textColor="#86FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtIngreCount"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="#FFC107"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="5dp">

                    <EditText
                        android:id="@+id/editSearchIngre"
                        android:layout_width="215dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/boxline_24"
                        android:backgroundTint="#FFFFFF"
                        android:ems="13"
                        android:hint="재료를 검색하세요"
                        android:inputType="textPersonName"
                        android:paddingLeft="5dp"
                        android:textSize="14sp" />
                </androidx.cardview.widget.CardView>

                <ImageButton
                    android:id="@+id/imgSearchIngre"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#00FFFFFF"
                    app:srcCompat="@drawable/baseline_search_24"
                    app:tint="#B3FFFFFF" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ingreRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/textView100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:text="등록되지 않은 재료가 있으면 아래에 꼭 체크해 주세요.  "
                android:textColor="#0B2347"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/textView97"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="레시피 참고 필요"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="#0B2347"
                    android:fontFamily="sans-serif-black"
                    android:text="작성 완료"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>